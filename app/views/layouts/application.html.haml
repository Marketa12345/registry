!!!
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title= content_for?(:title) ? yield(:title) : "Registr nájmů"
    = stylesheet_link_tag    "application"
    = javascript_include_tag "vendor/modernizr"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - flash.each do |key, value|
      = content_tag :div, value, class: "flash #{key}"
    %nav.top-bar{"data-topbar" => "", :role => "navigation"}
      %ul.title-area
        %li.name
          %h1
            %a{:href => "/"} Registr
        / Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone
        %li.toggle-topbar.menu-icon
          %a{:href => "#"}
            %span Menu
      %section.top-bar-section
        / Right Nav Section
        %ul.right

        
                    
              
          - if current_user 
            
            %li= link_to current_user.email, edit_user_registration_path
            %li= link_to "Odhlásit", destroy_user_session_path
          
          %li.has-dropdown
            %a{:href => "#"} Menu
            %ul.dropdown
              - if !user_signed_in?
                %li= link_to "Přihlásit se ", new_user_session_path
                %li= link_to "Registrace", new_user_registration_path
                %li= link_to "Všechny předměty", subjects_path
                %li= link_to "Předměty volné k pronájmu", leasable_index_path
              - if user_signed_in? && current_user.is_tenant?
                %li= link_to "Moje předměty", subjects_path
                %li= link_to "Moje smlouvy", contracts_path
                %li= link_to "Můj profil", my_profiles_path
                %li= link_to "Moje předměty volné k pronájmu", leasable_index_path
                %li= link_to "Všechny veřejné předměty volné k pronájmu", all_leasable_index_path
                %li= link_to "Moje zprávy", my_messages_messages_path
              - if user_signed_in? && current_user.is_landlord?
                %li= link_to "Moje předměty", subjects_path
                %li= link_to "Moje smlouvy", contracts_path
                %li= link_to "Můj profil", my_profiles_path
                %li= link_to "Moje předměty volné k pronájmu", leasable_index_path
                %li= link_to "Všechny veřejné předměty volné k pronájmu", all_leasable_index_path
                %li= link_to "Moje zprávy", my_messages_messages_path
        / Left Nav Section
        %ul.left
          %li.has-form
            .row.collapse
              .large-5.small-9.columns
                = form_tag subjects_path, method: :get, class: "navbar-form navbar-right", role: "search" do
                  %p= text_field_tag :search, params[:search], class: "radius-left expand", placeholder: "Vyhledávání předmětů"
              .large-4.small-3.columns
                %p= submit_tag "Hledat", name: nil, class: "alert button expand"
              .small-3.columns
                = link_to "Rozšířené", searches_path, class: "button"
          
              
    #main-content.row.full-min-height
    
      = yield

    %footer.row
      .large-12.columns
        %hr/
        .margin-30px= social_share_button_tag("Registr nájmů", :url => "http://registrnajmu.cz/")
        %p © Registr 2015
    = javascript_include_tag "application"