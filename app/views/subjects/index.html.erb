<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Description</th>
      <th>Leasable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>


        <td><%= subject.name %></td>
        <td><%= subject.type %></td>
        <td><%= subject.description %></td>
        <td><%= subject.leasable %></td>
        <td><%= link_to 'Show', subject %></td>

         <%if user_signed_in? && current_user.is_landlord?%>

        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>


<%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

 <%if user_signed_in? && current_user.is_landlord?%>

<%= link_to 'New Subject', new_subject_path %>
<%end%>