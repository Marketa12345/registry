<h2>Přihlásit se</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :heslo %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :Zapamatovat %>
    </div>
  <% end -%>


     <%= f.label :Nebo %>

    <%= link_to image_tag("http://p2.uloziste.com/fotky7/v207be144093dde0/fa1bfb58b055b85d.jpg", size: "46x40", :border => 0), "/auth/facebook", id: "log_in" %>

<%= link_to image_tag("http://p2.uloziste.com/fotky7/vefa242cd57b0ee1/63c00c7264b3a665.jpg", size: "46x40", :border => 0), "/auth/twitter", id: "log_in" %>

<%= link_to image_tag("http://p2.uloziste.com/fotky7/v9eae63f5d2c7e9e/828c9cbae0afc85e.jpg", size: "46x40", :border => 0), "/auth/google_oauth2", id: "log_in" %>

<br>


  <div class="actions">
    <%= f.submit "Přihlásit", class: "button" %>
    
  </div>
<% end %>

<%= render "devise/shared/links" %>
